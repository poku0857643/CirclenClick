# API Keys for Cloud Fact-Checking Services
# Get keys from respective providers

# Google Fact Check Tools API
# https://developers.google.com/fact-check/tools/api
GOOGLE_FACTCHECK_API_KEY=your_google_factcheck_api_key_here

# ClaimBuster API (free tier available)
# https://idir.uta.edu/claimbuster/
CLAIMBUSTER_API_KEY=your_claimbuster_api_key_here

# Factiverse API
# https://www.factiverse.ai/
FACTIVERSE_API_KEY=your_factiverse_api_key_here

# OpenAI API (optional, for complex reasoning)
# https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API (optional, alternative to OpenAI)
# https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Redis Configuration (optional, falls back to disk cache if not configured)
REDIS_URL=redis://localhost:6379
REDIS_ENABLED=false

# FastAPI Server Configuration
API_HOST=localhost
API_PORT=8080
API_RELOAD=true

# Model Settings
MODEL_CONFIDENCE_THRESHOLD=0.7
CACHE_TTL_HOURS=24
MAX_CACHE_SIZE_MB=500

# Processing Settings
LOCAL_ONLY_MODE=false
CLOUD_TIMEOUT_SECONDS=15
MAX_CONCURRENT_REQUESTS=5

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/circlenclick.log

# Development
DEBUG=true
TESTING=false
